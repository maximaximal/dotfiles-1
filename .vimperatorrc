" vim: set ft=vim:

hi ErrorMsg   -a background-color: #ff5555 !important;
hi Hint       -a background-color: #ff5555 !important; font-size: 13px !important; line-height: 14px !important;
hi HintActive -a background-color: #77ff77 !important;
hi HintElem   -a background-color: #ffffaa !important;

inoremap <C-p> <Up>
inoremap <C-n> <Down>
inoremap <C-b> <Left>
inoremap <C-f> <Right>
inoremap <C-a> <Home>
inoremap <C-e> <End>
inoremap <C-d> <Del>
inoremap <C-h> <BS>

cnoremap <C-p> <Up>
cnoremap <C-n> <Down>
cnoremap <C-b> <Left>
cnoremap <C-f> <Right>

noremap j 3j
noremap k 3k
noremap J <C-d>
noremap K <C-u>
noremap s :stop<cr>

noremap <C-i> <C-o>
noremap <C-o> <C-i>

set nextpattern+=\s*下一页|下一张|下一篇|下一頁|下页|后页\s*
set previouspattern+=\s*上一页|上一张|上一篇|上一頁|上页|前页\s*
"set editor='/usr/local/bin/mvim -f'
